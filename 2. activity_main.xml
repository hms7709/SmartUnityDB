<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.program000.MainActivity">

    <TextView
        android:text=".....Monitor....."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewMonitor" />

    <Button
        android:id="@+id/button_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView"
        android:text="POWER ON" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="800px"
        android:layout_height="800px"
        android:layout_above="@+id/temp_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/graph" />

    <Button
        android:id="@+id/button_motor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_graph"
        android:layout_alignBottom="@+id/button_graph"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/button_graph"
        android:text="모터 가동" />

    <Button
        android:id="@+id/button_graph"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="63dp"
        android:layout_toStartOf="@+id/imageView"
        android:text="그래프 보기" />

    <Button
        android:id="@+id/temp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button_graph" />

    <Button
        android:id="@+id/humi_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temp_button"
        android:layout_alignStart="@+id/button_motor"
        android:text="Humi" />

    <Button
        android:id="@+id/motor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/humi_button"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/humi_button"
        android:text="motor" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_graph"
        android:layout_below="@+id/button_graph"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/st_speed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_graph"
            android:layout_below="@+id/button_motor"
            android:layout_weight="1"
            android:text="멈춤" />

        <RadioButton
            android:id="@+id/ft_speed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/st_speed_button"
            android:layout_below="@+id/st_speed_button"
            android:layout_weight="1"
            android:text="50" />

        <RadioButton
            android:id="@+id/h_speed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/h_speed_button"
            android:layout_below="@+id/h_speed_button"
            android:layout_weight="1"
            android:text="100" />

        <RadioButton
            android:id="@+id/hf_speed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/h_speed_button"
            android:layout_below="@+id/h_speed_button"
            android:layout_weight="1"
            android:text="150" />

        <RadioButton
            android:id="@+id/th_speed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/hf_speed_button"
            android:layout_below="@+id/hf_speed_button"
            android:layout_weight="1"
            android:text="200" />

        <RadioButton
            android:id="@+id/max_speed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/th_speed_button"
            android:layout_below="@+id/th_speed_button"
            android:layout_weight="1"
            android:text="255" />

    </RadioGroup>

    <Button
        android:id="@+id/speed_control_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/radioGroup"
        android:text="속도 조절" />
</RelativeLayout>
